.row-fluid
  .span3.well
    = render 'shared/mission_statement'
  .span8
    = simple_form_for(resource, :as => resource_name, html: { class: 'form-horizontal' }, :url => session_path(resource_name)) do |f|
      %legend login
      - if f.error_notification
        .alert.alert-error.fade.in
          %a.close{"data-dismiss" => "alert", :href => "#"} Ã—
          = f.error_notification
      = f.input :email
      = f.input :password, required: true
      - if devise_mapping.rememberable?
        .form-actions
          = f.check_box :remember_me
          = f.button :submit, "Login", class: 'btn btn-success'
    = render :partial => "devise/shared/links"


%h1 All users
= paginate @users
%ul.users
  - @users.each do |user|
    %li
      #{user.name} profile: #{link_to root_url(:subdomain => user.subdomain), root_url(:subdomain => user.subdomain)}
      - if current_user.admin?
        | #{link_to "delete", user, :method => :delete, :confirm => "sure?", :title => "Delete this #{user.name}"}


%table.profile{:summary => "Profile information"}
  %tr
    %td.main
      %h1
        = gravatar_for @user
        = @user.name
      - if @user.thankyous.empty?
        Nobody has thanked #{@user.name} yet.  Would you like to be the first?
        = render 'shared/thankyou_steps'
        = render 'shared/thankyou_tips'
      -else
        %table.thankyous{:summary => "User thankyous"}
          = render @thankyous
          = paginate @thankyous
        = paginate @thankyous
    %td.sidebar.round
      %strong Name
      = @user.name
      %br/
      %strong URL
      = link_to user_path(@user), @user
      %br/
      %strong Thankyous
      = @user.thankyous.count


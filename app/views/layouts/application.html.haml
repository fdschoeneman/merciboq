!!!
%html{:lang => "en"}
  = render 'layouts/head'
  %body
    .container
      %header
        = render 'layouts/header'
        .row
        = render 'shared/flash_messages', :locals => {:flash => flash}
        .row.span12.offset4
          .logo
            = link_to logo, root_url(:host => request.domain)
      .row
        .span1
          %p
        .span3
          = yield :column1
        .span8
          = yield :column2
        .span1
          %p
      .span6.offset3
        = render 'layouts/footer'
    = debug(params) if Rails.env.development?



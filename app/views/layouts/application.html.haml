!!!
%html{:lang => "en"}
  = render 'layouts/head'
  %body
    .container
      %header
        = render 'layouts/header'
      %main
        .row
          %center.logo
            = link_to logo, root_url(:host => request.domain)  
        .row
          = render 'shared/flash_messages', :locals => {:flash => flash}
        .row
          .span1
            %p
          .span4
            = yield :column1
          .span7
            = yield :column2
          .span1
            %p
        .span6.offset3
          = render 'layouts/footer'
    = debug(params) if Rails.env.development?



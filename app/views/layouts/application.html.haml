%html{:lang => "en"}
  = render 'layouts/head'
  %body
    .container
      %header
        = render 'layouts/header'
      %main  
        .row
          = render 'shared/flash_messages', :locals => {:flash => flash}
        .row
          .span1
            %p
          .span3
            = yield :column1
          .span8
            = yield :column2
          .span1
            %p
        .span6.offset3
          = render 'layouts/footer'
    = debug(params) if Rails.env.development?



%header
  .logo
    = link_to "MerciboQ!", root_path
  %nav
    %ul
      - if signed_in?
        %li= link_to_unless_current "Thankyous", thankyou_url(:host => request.domain)
        |
        %li= link_to_unless_current "Welcomes", welcome_url(:host => request.domain)
      -else
        %li= link_to_unless_current "Home", root_url(:host => request.domain)
        |
        %li= link_to_unless_current "About", about_url(:host => request.domain)
        |
        %li= link_to_unless_current "Help", help_url(:host => request.domain)
      |
      = render 'devise/menu/registration_items'
      |
      = render 'devise/menu/login_items'
  %br


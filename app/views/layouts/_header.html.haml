%header
  .navbar.navbar-fixed-top
    .navbar-inner
      .container-fluid
        %a.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse"}
          %span.i-bar
          %span.i-bar
          %span.i-bar
        %a.brand{:href => "#"}Merciboq
        .container-fluid.nav-collapse
          %ul.nav
            %li= link_to "Link 1", "/path1"
            %li= link_to "Link 2", "/path2"
            %li= link_to "Link 3", "/path3"
        .logo
          = link_to logo, root_url(:host => request.domain)
        %ul.nav
          - if signed_in?
            %li
              = link_to "Thankyous", thankyous_url(:host => request.domain)
            %li.divider-vertical
            %li
              = link_to "Welcomes", welcomes_url(:host => request.domain)
          -else
            %li.divider-vertical
            %li
              = link_to "About", about_url(:host => request.domain)
            %li.divider-vertical
            %li
              = link_to "Help", help_url(:host => request.domain)
          = render 'devise/menu/registration_items'
          = render 'devise/menu/login_items'


.navbar.navbar-fixed-top
  .navbar-inner
    .container
      %ul.nav.pull-right
        - if signed_in?
          %li
            = link_to "Thankyous", thankyous_url(:host => request.domain)
          %li.divider-vertical
          %li
            = link_to "Welcomes", welcomes_url(:host => request.domain)
        -else
          %li.divider-vertical
          %li
            = link_to "About", about_url(:host => request.domain)
          %li.divider-vertical
          %li
            = link_to "Help", help_url(:host => request.domain)
        = render 'devise/menu/registration_items'
        = render 'devise/menu/login_items'


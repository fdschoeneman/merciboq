%table.profile{:summary => "Profile information"}
  %tr
    %td.main
      %h1
        = gravatar_for @user
        = @user.name
      = if @user.welcomes.empty?
        = render 'shared/thankyou_steps'
      - else
        %table.thankyous{:summary => "welcomes"}
          = render @welcomes
          = paginate @welcomes
        = paginate @welcomes
    %td.sidebar.round
      %strong Name
      = @user.name
      %br/
      %strong URL
      = link_to user_path(@user), @user
      %br/
      %strong Thankyous
      = @user.thankyous.count
      %br/
      %strong Welcomes
      = @user.thankyous.count


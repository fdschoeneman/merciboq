%dl.dl-horizontal
  / %dt 
  / %dd
  /   %address 
  /     / - if @user.business_name.present?
  /     %strong= @user.business_name 
  /     - if @user.address_1.present?
  /       %br= @user.address_1
  /     - if @user.address_2.present?
  /       %br= @user.address_2
  /     #{@user.city} #{@user.state}  #{@user.zip_code}
  /     %br
  /     %abbr{ title: "Phone" } P:
  /     = @user.phone
  %dt Name:
  %dd= @user.name
  %dt Subdomain:
  %dd= @user.subdomain
  %dt Custom email:
  %dd= link_to "#{@user.subdomain}@merciboq.com"
  %dt Member since:
  %dd
    = time_ago_in_words(@user.created_at)
    ago
  %dt Welcomes:
  %dd
    %span.badge.badge-info
      = @user.welcomes.count
  %dt Thankyous:
  %dd
    %span.badge.badge-info
      = current_user.thankyous.count
  %dt User number:
  %dd
    = @user.id
  %dt subordinates:
  %dd
    %span.badge.badge-info
      = @user.dominants.count
  %dt dominants:
  %dd
    %span.badge.badge-info
      = current_user.subordinates.count

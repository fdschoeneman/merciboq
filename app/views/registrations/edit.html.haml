%h2
  Edit Yo Self
= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }, :validate => true) do |f|
  = devise_error_messages!
  = f.input :name
  = f.input :email
  = f.input :password, label: "New password", required: false, :placeholder => "Leave blank unless you want to change it"
  = f.input :password_confirmation, label: "New password confirmation", required: false, :placeholder => "Must match password above"
  = f.input :current_password, :placeholder => "********"
  %p
    = f.button :submit, "Update your settings"
%h3 Cancel my account
%p
  Unhappy? #{link_to "Cancel my account", registration_path(resource_name), :confirm => "Are you sure?", :method => :delete}.
= link_to "Back", :back

